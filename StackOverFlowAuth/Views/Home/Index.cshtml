@model IEnumerable<StackOverFlowAuth.Models.Question>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Learn, Share, Build!</h2>
    <h3>Each month, over 50 million developers come to Stak Overflow to learn, share their knowledge, and built their carrers.</h3>
    <p class="lead">Join the world's largest developer community.</p>
</div>

<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <div id="votes_div">
                    <span class="badge">@Html.DisplayFor(modelItem => item.VoteCount)</span> Votes
                </div>

            </td>
            <td>
                <div id="votes_div">
                    <span class="badge">@Html.DisplayFor(modelItem => item.AnswerCount)</span> Answers
                </div>
            </td>
            <td>
                <div id="votes_div">
                    <span class="badge">@Html.DisplayFor(modelItem => item.ViewCount)</span> Views
                </div>
            </td>
            <td>
                @Html.ActionLink(item.QuestionName, "AnswerQuestion", "Questions", new { id = item.Id }, null) <br />
                <span class="label label-info">@Html.DisplayFor(modelItem => item.Category.Name) </span>
            </td>
            <td>
                by @Html.DisplayFor(modelItem => item.User.Name)
            </td>

            <td>
                on @Html.DisplayFor(modelItem => item.CreationDate, "{0:dd/MM/YYYY hh:mm:ss tt}")
            </td>
        </tr>
    }

</table>
